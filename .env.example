# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your-bucket-name

# Virus Scanning Configuration (Optional)
# VirusTotal API Key (get from https://www.virustotal.com/gui/my-apikey)
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# ClamAV Endpoint (if using local ClamAV server)
CLAMAV_ENDPOINT=http://localhost:3310

# Document Encryption Key (generate a strong random key)
DOCUMENT_ENCRYPTION_KEY=your_strong_encryption_key_here

# Database Configuration (for Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/hodos_db"

# Authentication Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Application Configuration
NODE_ENV=development

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# GoHighLevel Configuration (for CRM integration)
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id_here