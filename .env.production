# Production Environment Variables Template
# Copy this file and fill in your actual values in Vercel Dashboard

# Database
DATABASE_URL=

# Authentication
NEXTAUTH_URL=https://hodos360.com
NEXTAUTH_SECRET=

# OpenAI API (Required for AI features)
OPENAI_API_KEY=

# Email Service
SENDGRID_API_KEY=
EMAIL_FROM=noreply@hodos360.com

# Stripe (Required for payments)
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1

# GoHighLevel (Optional - CRM integration)
GHL_API_KEY=
GHL_LOCATION_ID=

# Sentry (Optional - error tracking)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Redis (Optional - for caching and rate limiting)
REDIS_URL=

# Admin Configuration
ADMIN_EMAIL=admin@hodos360.com

# Security
ENCRYPTION_KEY=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MARKETING=true
ENABLE_VIDEO_AGENTS=true